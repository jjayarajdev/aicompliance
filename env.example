# AI Gateway PoC Environment Configuration
# Copy this file to .env and update with your actual values

# Application Environment
GATEWAY_ENVIRONMENT=development
GATEWAY_LOG_LEVEL=debug

# Database Configuration
GATEWAY_DATABASE_HOST=localhost
GATEWAY_DATABASE_PORT=5432
GATEWAY_DATABASE_USERNAME=gateway_user
GATEWAY_DATABASE_PASSWORD=gateway_password
GATEWAY_DATABASE_DATABASE=ai_gateway

# Redis Configuration
GATEWAY_REDIS_HOST=localhost
GATEWAY_REDIS_PORT=6379
GATEWAY_REDIS_PASSWORD=

# Security Configuration
GATEWAY_SECURITY_JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# AI Provider API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# CORS Configuration
GATEWAY_SECURITY_CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Cache Configuration
GATEWAY_CACHE_ENABLED=true
GATEWAY_CACHE_DEFAULT_TTL=1h

# Rate Limiting Configuration
GATEWAY_RATE_LIMIT_ENABLED=true
GATEWAY_RATE_LIMIT_REQUESTS_PER_MIN=60

# Monitoring Configuration
GATEWAY_MONITORING_ENABLED=true
GATEWAY_MONITORING_METRICS_PORT=9090

# Next.js Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1

# Development Tools
NEXT_TELEMETRY_DISABLED=1
WATCHPACK_POLLING=true 